# Configuración de Base de Datos
MONGO_URI=mongodb://localhost:27017/psychological-reports

# Configuración de Seguridad
JWT_SECRET=your_secure_jwt_secret_here

# Configuración del Servidor
PORT=5000
NODE_ENV=development

# Configuración de Correo Electrónico
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password
EMAIL_FROM_NAME=Sistema de Informes Psicológicos
EMAIL_SERVICE=gmail
# Para desarrollo (envía emails a una bandeja de prueba)
EMAIL_TEST_MODE=true

# URL del Frontend (para enlaces en emails)
FRONTEND_URL=http://localhost:5000

# Configuración del Asistente IA
# La API key NO debe estar aquí para mayor seguridad
# Usa variables de entorno del sistema en su lugar
# OPENAI_API_KEY=

# Para desarrollo sin API Key (usa respuestas simuladas)
AI_SERVICE_MOCK=true

# Configuración de Almacenamiento de Archivos
MAX_FILE_SIZE=5242880  # 5MB en bytes
ALLOWED_FILE_TYPES=png,jpg,jpeg,gif,svg
CLEANUP_TEMP_FILES_HOURS=24

# Configuración de Auditoría
ENABLE_AUDIT_LOGS=true